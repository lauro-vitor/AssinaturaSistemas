@model Administrativo.Models.PaisModel.PaisViewModel
@{
    ViewBag.Title = "Pais";
}

<h2>País</h2>


@if (!string.IsNullOrEmpty(Model.MensagemSucesso))
{
    <div class="alert alert-success">
        @Model.MensagemSucesso
    </div>
}
@if (Model.TemErro)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var erro in Model.Erros)
            {
                <li>@erro</li>
            }
        </ul>
    </div>
}
<form action="/Pais/Manter" method="POST">
    @Html.HiddenFor(m => m.Pais.IdPais)
    <div class="row">
        <div class="col-xs-12 col-sm-6">
            <div class="form-group">
                <label>Nome País</label>
                @Html.TextBoxFor(m => m.Pais.NomePais, htmlAttributes: new
                 {
                    @class = "form-control"
                 })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 form-buttons-wrapper" >
            <a class="btn btn-default col-xs-12 col-sm-2"
               href="@Url.Action(actionName:"Index", controllerName:"Pais" )">
                Voltar
            </a>
            &nbsp;&nbsp;&nbsp;
            <button type="submit" class="btn btn-success col-xs-12 col-sm-2">
                Salvar
            </button>
        </div>
    </div>
</form>
